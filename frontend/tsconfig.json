{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"    // src 디렉토리의 모든 파일 포함
  ],
  "exclude": [
    "node_modules" // node_modules는 제외
  ]
}
